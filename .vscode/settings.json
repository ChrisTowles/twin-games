{
  "cSpell.words": [
    "",
    "antfu",
    "Firestore",
    "heroiclabs",
    "nakama",
    "Nakama",
    "nkruntime",
    "onmatchdata"
  ],
  "prettier.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "files.associations": {
    "*.css": "postcss",
  },
  "editor.formatOnSave": false,
  "github.copilot.enable":{ "markdown": true},
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true
},
"cSpell.customDictionaries": {
  "custom-dictionary-workspace": {
    "name": "custom-dictionary-workspace",
    "path": "${workspaceFolder:twin-games}/.cspell/custom-dictionary-workspace.txt",
    "addWords": true,
    "scope": "workspace"
  }
},
"cSpell.ignoreWords": [
  "xoxo"
],
}
